<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.wdharmana.bakingapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.detail.RecipeListActivity"
            android:label="@string/title_recipe_list"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.step.RecipeDetailActivity"
            android:label="@string/title_recipe_detail"
            android:parentActivityName=".ui.detail.RecipeListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.wdharmana.bakingapp.ui.detail.RecipeListActivity"/>
        </activity>


        <receiver android:name=".widget.AppWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/recipe_widget_info" />
        </receiver>
        <service
            android:name=".widget.AppWidgetIntentService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <provider
            android:name=".data.local.RecipeProvider"
            android:authorities="com.wdharmana.bakingapp"
            android:exported="true" />

    </application>

</manifest>